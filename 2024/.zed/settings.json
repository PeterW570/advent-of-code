{
	"lsp": {
		"deno": {
			"settings": {
				"deno": {
					"enable": true
				}
			}
		}
	},
	"languages": {
		"TypeScript": {
			"tab_size": 4,
			"language_servers": [
				"deno",
				"!typescript-language-server",
				"!vtsls",
				"!eslint"
			],
			"formatter": "language_server"
		},
		"TSX": {
			"language_servers": [
				"deno",
				"!typescript-language-server",
				"!vtsls",
				"!eslint"
			],
			"formatter": "language_server"
		}
	}
}
